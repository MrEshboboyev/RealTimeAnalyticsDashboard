@model IEnumerable<UserActivityDTO>

<div class="container mt-5">
    <h2 class="mb-4">All User Activities</h2>

    <table id="userActivityTableBody" class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Activity ID</th>
                <th>Activity Type</th>
                <th>Timestamp</th>
                <th>Session ID</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var activity in Model)
            {
                <tr id="activityRow-@activity.Id">
                    <td>@activity.Id</td>
                    <td>@activity.ActivityType</td>
                    <td>@activity.Timestamp.ToString("g")</td>
                    <td>@activity.SessionId</td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@activity.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/js/userActivityUpdates.js"></script>
}
